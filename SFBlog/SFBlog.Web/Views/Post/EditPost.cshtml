@model SFBlog.BLL.ViewModel.PostEditViewModels

@{
	ViewData["Title"] = "Создание поста";
}


<div class="container-page">
	<div class="col-md-12 col-lg-12 col-sm-12 ">
		<h2>Создание поста</h2>
		<form class="" method="post" asp-controller="Post" asp-action="EditPost">
			<input type="" asp-for="Id"/>
			<div class="form-outline mb-3">
				<label class="form-label" asp-for="Tags"></label>
				@if (Model is not null)
				{
					<div style="border: 1px solid #ced4da; border-radius: 0.25rem; padding: 0.375rem 0.75rem;">
				    @for (int i = 0; i < Model.Tags.Count; i++)
				    {
					    <td>
						    @Html.CheckBoxFor(model => model.Tags[i].IsSelected)
						    <lable class="form-check-label">@Model.Tags[i].Name</lable>
						    @Html.HiddenFor(model => model.Tags[i].Id)
					    </td>
				    }
					</div>
				}
			</div>
			<div class="form-outline mb-3">
				<label class="form-label" asp-for="Title"></label>
				<input class="form-control" type="text" asp-for="Title" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-outline mb-3">
				<label class="form-label" asp-for="Text"></label>
				<textarea class="form-control" type="text" rows="11" asp-for="Text"></textarea>
				<span asp-validation-for="Text" class="text-danger"></span>
			</div>
			<div class="form-outline mb-3">
				<input class="btn btn-primary" type="submit" value="Добавить" />
			</div>
			<div class="form-outline mb-3">
				<a style="text-decoration:none" method="get" asp-controller="Post" asp-action="GetPosts">Перейти к списку всех постов</a>
			</div>
		</form>
	</div>
</div>
