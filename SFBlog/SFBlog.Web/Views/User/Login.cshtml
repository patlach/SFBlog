@model SFBlog.BLL.ViewModel.UserLoginViewModel

@{
	ViewData["Title"] = "Вход";
}

<div class="container-page">
	<div class="col-md-8 col-lg-6 col-xl-4">
		<h2>Вход</h2>
		<form class="" method="post" asp-controller="User" asp-action="Login"> 
			<div class="form-outline mb-3">
				<label class="form-label" asp-for="Email"></label>
				<input class="form-control" type="email" asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-outline mb-3">
				<label class="form-label" asp-for="Password"></label>
				<input class="form-control" type="password" asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-outline mb-3">
				<input class="btn btn-primary" type="submit" value="Войти" />
			</div>
			<div class="form-outline mb-3">
				<span>Нет аккаунта?</span> 
				<a style="text-decoration:none" method="get" asp-controller="User" asp-action="Register">Регистрация</a>
			</div>
		</form>
	</div>
</div>